def validate_password(word):
    if any(c.isupper() for c in word):
        print("This password has an uppercase letter")
    else:
        print("this password doesn't have an uppercase letter")
    
    for i in word:
        if i == "1" or i == "2" or i == "3" or i == "4" or i == "5" or i == "6" or i == "7" or i == "8" or i == "9" or i == "0":#check if the letter you're looking at is 1 or 2 or 3 etc
           print("found a number!")
   

